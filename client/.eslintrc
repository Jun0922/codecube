{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    // "eslint:recommended", 개발환경에서 잠시 끕니다.
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "plugins": ["react-hooks", "react"],
  "rules": {
    "quotes": ["error", "single"],
    "indent": "off",
    "semi": ["error", "never"]
  }
}
